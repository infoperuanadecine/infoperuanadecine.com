{
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "npm install && cd frontend && npm install",
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@3.0.0",
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/movies/:movieId",
      "destination": "/api/movies/[movieId]"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}