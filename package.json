{
  "name": "movie-hosting-site",
  "version": "1.0.0",
  "description": "A movie hosting website similar to inforealdecine.com",
  "scripts": {
    "dev:api": "vercel dev --listen 3001 --yes",
    "dev:frontend": "cd frontend && npm start",
    "dev:full": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "install:all": "npm install && cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "deploy": "vercel --prod",
    "setup": "npm run install:all && echo 'Setup complete! Run npm run dev:full to start development'",
    "check": "node scripts/check-environment.js"
  },
  "keywords": [
    "movie",
    "hosting",
    "react",
    "nodejs",
    "tmdb"
  ],
  "author": "Peruvian Cinema Collective",
  "license": "MIT",
  "dependencies": {
    "@vercel/node": "^3.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "mongodb": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0",
    "vercel": "^32.0.0"
  }
}
